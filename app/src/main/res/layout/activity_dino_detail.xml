<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_dino"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:contentDescription="Deskripsi Gambar"
            android:scaleType="centerCrop"
            android:src="@drawable/a"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/dino_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Dinosaurus"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            app:layout_constraintTop_toBottomOf="@id/img_dino"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/dino_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Deskripsi Dinosaurus"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/dino_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" />

        <!-- TextView untuk menampilkan karakteristik -->
        <TextView
            android:id="@+id/dino_char_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Karakteristik"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/dino_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/dino_char"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Karakteristik Dinosaurus"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/dino_char_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" />

        <!-- TextView untuk menampilkan kelompok -->
        <TextView
            android:id="@+id/dino_group_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kelompok"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/dino_char"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/dino_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kelompok Dinosaurus"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/dino_group_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" />

        <!-- TextView untuk menampilkan habitat -->
        <TextView
            android:id="@+id/dino_habitat_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Habitat"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/dino_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/dino_habitat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Habitat Dinosaurus"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/dino_habitat_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" />
        <!-- TextView untuk menampilkan family -->
        <TextView
            android:id="@+id/dino_fam_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Family"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/dino_habitat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/dino_fam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Famili Dinosaurus"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/dino_fam_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" />

        <!-- TextView untuk menampilkan makanan -->
        <TextView
            android:id="@+id/dino_food_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Makanan"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/dino_fam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/dino_food"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Makanan Dinosaurus"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/dino_food_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" />

        <!-- TextView untuk menampilkan ukuran -->
        <TextView
            android:id="@+id/dino_size_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ukuran"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/dino_food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/dino_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ukuran Dinosaurus"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/dino_size_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" />

        <!-- TextView untuk menampilkan kelemahan -->
        <TextView
            android:id="@+id/dino_weak_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kelemahan"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/dino_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/dino_weak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kelemahan Dinosaurus"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/dino_weak_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" />

        <!-- Button untuk navigasi kembali -->
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/dino_weak"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
